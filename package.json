{
  "name": "@rikstv/shared-components-root",
  "version": "0.0.0",
  "private": "true",
  "scripts": {
    "dev": "npm run dev --workspace=portal",
    "build": "npm run build --workspace=portal --workspace=shared-components",
    "serve": "npm run serve --workspace=portal",
    "postinstall": "patch-package",
    "lint": "eslint --ext .ts,.tsx,.js .",
    "lint:fix": "eslint --fix --ext .ts,.tsx,.js .",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{portal,shared-components}/src/**/*.{js,ts,tsx,json}": [
      "eslint --fix"
    ],
    "{portal,shared-components}/src/**/*.{js,ts,tsx,json,scss,css}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "./portal",
    "./shared-components"
  ],
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "sass": "^1.34.1",
    "vite-react-jsx": "^1.1.1"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2",
    "vite": "^2.3.5"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  }
}
